    name("Robert Jordan",%zid%);
.

# Raymond E. Feist
raymond-feist %zid%; isa zsi:person;
    has-trait(zsi:author,%zid%);

    name("Raymond E. Feist",%zid%);
.

# Janny Wurts
janny-wurts %zid%; isa zsi:person;
    has-trait(zsi:author,%zid%);

    name("Janny Wurts",%zid%);
.

#------------------ Books -----------------

# Magician
