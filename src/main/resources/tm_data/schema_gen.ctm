    plays-role(zsi:property-type,
        zsi:regular-expression-constraint,0,*,%zid%);
    plays-role(zsi:property-type,
        zsi:property-with-scope-item-declaration,0,*,%zid%);
    plays-role(zsi:property-type,
        zsi:property-with-scope-item-type-declaration,0,*,%zid%);
    plays-role(zsi:property-type,
        zsi:property-set-permission-level,0,*,%zid%);
.

# AUTO PROPERTY TYPE
zsi:auto-property-type %zid%; isa zsi:item-type;
    kind-of(zsi:property-type,%zid%);

    name("Auto Property Type",%zid%);

    has-property(zsi:auto-property-generation-rule,1,1,%zid%);
    has-property(zsi:auto-property-generation-rule-description,0,1,%zid%);
.

