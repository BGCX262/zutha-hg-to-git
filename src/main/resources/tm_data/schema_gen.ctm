.

# PROPERTY SET PERMISSION LEVEL
zsi:property-set-permission-level %zid%; isa zsi:reified-association-type;
    kind-of(zsi:association,%zid%);
    kind-of(zsi:field-set-permission-level,%zid%);

    name("Property Set Permission Level",%zid%);
    name("Property Set has Permission Level",zsi:item,%zid%);
    name("Item restricts Property Sets of this type",zsi:property-type,%zid%);

    has-role(zsi:property-type,1,1,%zid%);
.

# ASSOCIATION FIELD SET PERMISSION LEVEL
zsi:association-field-set-permission-level %zid%; isa zsi:reified-association-type;
    kind-of(zsi:association,%zid%);
    kind-of(zsi:field-set-permission-level,%zid%);

    name("Association Field Set Permission Level",%zid%);
    name("Association Field Set has Permission Level",zsi:item,%zid%);
    name("Item restricts Association Field sets of this Association Type",zsi:association-type,%zid%);
    name("Item restricts Association Field sets of this Role and Association Type",zsi:role,%zid%);

    has-role(zsi:association-type,1,1,%zid%);
    has-role(zsi:role,1,1,%zid%);
.

